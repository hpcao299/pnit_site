<div class="after:fixed after:w-screen after:h-screen after:top-0 after:left-0 after:from-cyan-500 after:to-cyan-100 after:bg-gradient-to-bl after:-z-10 min-h-[calc(100vh-92px)] text-white pb-6">
    <div class="px-8 pt-6">
        <div class="w-full">
            <a href="/@{{foundUser.username}}/edit" class="inline-block p-2 pl-0">
                <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
            </a>
        </div>
        
        <header class="text-center flex items-center justify-center flex-col mt-5 mb-6">
            <div class="w-20 h-20">
                {{#if foundUser.image_url}}
                    <img src="{{foundUser.image_url}}" alt="{{foundUser.name}}" width="80" height="80" class="w-full h-full object-cover object-center rounded-full shadow-sm">
                {{/if}}
                {{#unless foundUser.image_url}}
                    <div class="rounded-full bg-gray-300 w-full h-full text-5xl flex items-center justify-center">{{firstWordOfName}}</div>
                {{/unless}}
            </div>
            <div class="mt-3 text-xl font-semibold uppercase text-white drop-shadow-lg shadow-black">{{foundUser.name}}</div>
            <p class="mt-2 font-sm font-light">{{foundUser.bio}}</p>
        </header>

        <h1 class="hidden">Trang cá nhân của {{foundUser.name}}</h1>
 
        <div class="bg-white rounded-lg px-7 pb-5 text-base text-black relative">
            <div class="absolute top-0 -left-2.5 h-[60px] w-[1px] bg-white"></div>
            <div class="absolute bottom-0 -right-2.5 h-[60px] w-[1px] bg-white"></div>
            <div class="text-center font-semibold py-1">Profile</div>
            <hr class="border-t border-solid border-black">
            <div class="py-4 px-5">
                <div class="flex items-center">
                    <div class="font-bold w-1/3 min-w-[80px]">Name:</div>
                    <span class="font-medium">{{foundUser.name}}</span>
                </div>
                {{#if foundUser.class}}
                    <div class="flex items-center">
                        <div class="font-bold w-1/3 min-w-[80px]">Class:</div>
                        <span class="font-medium">{{foundUser.class}}</span>
                    </div>
                {{/if}}
                {{#if foundUser.school}}
                    <div class="flex items-center">
                        <div class="font-bold w-1/3 min-w-[80px]">School:</div>
                        <span class="font-medium">{{foundUser.school}}</span>
                    </div>
                {{/if}}
                {{#if foundUser.phone}}
                    <div class="flex items-center">
                        <div class="font-bold w-1/3 min-w-[80px]">Phone:</div>
                        <span class="font-medium">{{foundUser.phone}}</span>
                    </div>
                {{/if}}
            </div>
            <hr class="border-t border-solid border-black">
        </div>

        <div class="my-12 flex gap-4 px-2">
            <div class="flex-1"><div class="h-6 w-full bg-white rotate-45 max-w-1 min-w-[2px]"></div></div>
            <div class="flex-1"><div class="h-6 w-full bg-white rotate-45 max-w-1 min-w-[2px]"></div></div>
