            <div class="flex-1"><div class="h-6 w-full bg-white rotate-45 max-w-1 min-w-[2px]"></div></div>
        </div>

        <div>
            <h2 class="uppercase font-semibold text-xl text-center tracking-wider drop-shadow-lg shadow-black mb-6">SOCIAL MEDIA</h2>
            <div>
                {{#if foundUser.facebook_url}}
                    <a href="{{foundUser.facebook_url}}">
                        <div class="mb-4 bg-transparent border-[5px] border-solid border-white rounded-sm px-3 py-4 relative drop-shadow-lg shadow-black">
                            <img src="/img/facebook_icon.png" alt="Facebook icon" width="32" height="32" class="absolute left-3 top-1/2 -translate-y-1/2">
                            <div class="text-center text-xl capitalize font-bold w-full">Facebook</div>
                        </div>
                    </a>
                {{/if}}
                {{#if foundUser.instagram_url}}
                    <a href="{{foundUser.instagram_url}}">
                    <div class="mb-4 bg-transparent border-[5px] border-solid border-white rounded-sm px-3 py-4 relative drop-shadow-lg shadow-black">
                    <img src="/img/instagram_icon.png" alt="Instagram icon" width="32" height="32" class="absolute left-3 top-1/2 -translate-y-1/2">
                    <div class="text-center text-xl capitalize font-bold w-full">Instagram</div>
                </div>
                </a>
                {{/if}}
                {{#if foundUser.email}}
                    <a href="mailto:{{foundUser.email}}">
                    <div class="mb-4 bg-transparent border-[5px] border-solid border-white rounded-sm px-3 py-4 relative drop-shadow-lg shadow-black">
                    <img src="/img/gmail_icon.png" alt="Gmail icon" width="32" height="32" class="absolute left-3 top-1/2 -translate-y-1/2">
                    <div class="text-center text-xl capitalize font-bold w-full">Gmail</div>
                </div>
                </a>
                {{/if}}
                {{#if foundUser.github_url}}
                    <a href="{{foundUser.github_url}}">
                    <div class="mb-4 bg-transparent border-[5px] border-solid border-white rounded-sm px-3 py-4 relative drop-shadow-lg shadow-black">
                    <img src="/img/github_icon.png" alt="Github icon" width="32" height="32" class="absolute left-3 top-1/2 -translate-y-1/2">
                    <div class="text-center text-xl capitalize font-bold w-full">Github</div>
                </div>
                </a>
                {{/if}}
                 {{#if foundUser.discord_url}}
                <a href="{{foundUser.discord_url}}">
                    <div class="mb-4 bg-transparent border-[5px] border-solid border-white rounded-sm px-3 py-4 relative drop-shadow-lg shadow-black">
                    <img src="/img/discord_icon.png" alt="Discord icon" width="32" height="32" class="absolute left-3 top-1/2 -translate-y-1/2">
                    <div class="text-center text-xl capitalize font-bold w-full">Discord</div>
                </div>
                </a>
